@model MyCV.Models.FrontPageViewModel
@{
    ViewBag.Title = "MyCV";
}

<main class="content" data-spy="scroll" data-target="#navbar">
    <div class="container">
        <fieldset id="personalInfo">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3><b>Personal Info</b></h3>
                </div>
                @if (ViewBag.Mode == MyCV.Models.PageViewMode.EditPersonalInfo)
                {
                    <a href="/?mode=Index">Завершить редактирование</a>
                    @Html.Partial("_EditPersonalInfo", Model.PersonalInfo)
                }
                else
                {
                    <a href="/?mode=EditPersonalInfo#personalInfo">Редактировать</a>
                    @Html.Partial("_ViewPersonalInfo", Model.PersonalInfo)
                }
            </div>
        </fieldset>
