@model MyCV.Models.PersonalInfoViewModel


<div class="form">
    <form action="/Home/EditPersonalInfo" method="post" role="form">
        <h4 class="title info">Personal Info:</h4>
        <div class="form-group">
            <label for="nameid">Name</label>
            <input type="text" name="Name" class="form-control" id="nameid" placeholder="Введите имя" value="@Model.Name">
            @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="surnameid">Surname</label>
            <input type="text" name="Surname" class="form-control" id="surnameid" placeholder="Введите фамилию" value="@Model.Surname">
            @Html.ValidationMessage("Surname", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="phoneid">Phone</label>
            <input type="text" name="Phone" class="form-control" id="phoneid" placeholder="Введите телефон" value="@Model.Phone">
            @Html.ValidationMessage("Phone", "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="e-mailid">e-mail</label>
            <input type="text" name="Email" class="form-control" id="e-mail" placeholder="Введите e-mail" value="@Model.Email">
            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
        </div>
        <div>
            <input type="submit" class="btn btn-default" value="Отправить" />
        </div>
    </form>
</div>

