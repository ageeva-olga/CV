@model MyCV.Models.WorkExperienceListModel
<form action="/Home/AddWorkExperience" method="post" role="form">
    <table class="table table-striped">
        @foreach (var workExperience in Model.WorkExperienceList)
        {
            <tr>

                <td>@workExperience.Begin-@workExperience.End</td>
                <td>@workExperience.WorkName</td>
                <td>@workExperience.PositionName</td>
                <td><a href="/Home/DeleteWorkExperience?Id=@workExperience" class="btn btn-danger">X</a></td>
            </tr>
        }
            <tr>
                <td>
                    <input type="text" name="Begin" class="form-control" placeholder="Год начала"> -
                    <input type="text" name="End" class="form-control" placeholder="Год окончания">
                </td>
                <td><input type="text" name="WorkName" class="form-control" placeholder="Имя"></td>
                <td><input type="text" name="PositionName" class="form-control" placeholder="Имя"></td>
                <td><input type="submit" class="btn btn-success" value="Add" /></td>
            </tr>
    </table>
</form>


